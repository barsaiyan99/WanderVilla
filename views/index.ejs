<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    transition: opacity 0.3s ease; 
    cursor: pointer;
}
.filter:hover,
.filter:active { 
    opacity: 1;
}

.filter p {
    font-size: 0.8rem;
}

.filter a {
    color: black;
    text-decoration: none;
}
.info{
    display: none;
}
.tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
    margin-top: 1rem;
}
  #heading3{
    text-align: center;
  }
  .show-filter{
    border: 0.5px solid black;
  }
</style>
<% layout("/layouts/boilerplate")%>

    <!-- <h3>All Listings!</h3> -->
    <!-- <form action="/listings/new" method="get">
        <button>Create New Listing</button>
    </form> -->
    <div id="filters" class="row">
      <div class="filter option-btn col">
        <a href="/listings/trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/rooms">
          <div><i class="fa-solid fa-bed"></i></div>
           <p>Rooms</p>
        </a>
       
      </div>
      <div class="filter option-btn col">
        <a href="/listings/iconiccities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>
       
      </div>
      <div class="filter option-btn col">
        <a href="/listings/mountains">
       <div><i class="fa-solid fa-mountain"></i></div>
       <p>Mountains</p></a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/castles">
       <div><i class="fa-brands fa-fort-awesome"></i></div>
       <p>Castles</p></a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/amazingpools">
       <div><i class="fa-solid fa-person-swimming"></i></div>
       <p>Amazing pools</p></a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/camping">
       <div><i class="fa-solid fa-campground"></i></div>
       <p>Camping</p></a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/farms">
       <div><i class="fa-solid fa-cow"></i></div>
       <p>Farms</p></a>
      </div>
      <div class="filter option-btn col">
        <a href="/listings/arctic">
       <div><i class="fa-regular fa-snowflake"></i></div>
